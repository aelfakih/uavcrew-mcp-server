# UAVCrew Compliance MCP Server Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/compliance_db

# SQLite (for development/testing)
DATABASE_URL=sqlite:///./compliance_demo.db

# =============================================================================
# SECURITY
# =============================================================================
# API key for authenticating requests from UAVCrew
# Generate a strong random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
MCP_API_KEY=

# =============================================================================
# SERVER
# =============================================================================
# Host to bind to (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
MCP_HOST=0.0.0.0

# Port to listen on
MCP_PORT=8200

# =============================================================================
# LOGGING
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Seed demo data on startup (set to false in production)
SEED_DEMO_DATA=true
